<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>DigitMart </title>
  <link rel="stylesheet" href="/admin-assets/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="/admin-assets/vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="/admin-assets/css/style.css">
  <style>
    
   
     h2 {
         color: #333;
         font-size: 24px;
         margin-bottom: 10px;
     }
     p {
         color: #666;
         line-height: 1.6;
         margin-bottom: 10px;
     }
     ul {
         list-style-type: none;
         padding-left: 0;
     }
     li {
         background-color: #e0e0e0;
         border-radius: 5px;
         padding: 10px;
         margin-bottom: 10px;
     }
     form select {
         display: block;
         width: 100%;
         padding: 10px;
         margin-top: 5px;
         border: 1px solid #ccc;
         border-radius: 3px;
     }
     address {
         margin-top: 15px;
         color: #555;
     }
 </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<body>
</head>

<body>
  <div class="container-scroller">
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
      <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
        <p>Digit Mart</p>
      </div>
      <div class="navbar-menu-wrapper d-flex align-items-stretch">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
          <span class="mdi mdi-menu"></span>
        </button>
        <div class="search-field d-none d-md-block">
          <form class="d-flex align-items-center h-100" action="#">
            <div class="input-group">
              <div class="input-group-prepend bg-transparent">
                <i class="input-group-text border-0 mdi mdi-magnify"></i>
              </div>
              <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
            </div>
          </form>
        </div>
        <ul class="navbar-nav navbar-nav-right">
          <li class="nav-item nav-profile dropdown">
            <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown"
              aria-expanded="false">
              <i class="mdi mdi-power"></i>
            </a>
            <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
              <a class="dropdown-item" href="#">
                <i class="mdi mdi-cached mr-2 text-success"></i> Activity Log </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/admin/logout">
                <i class="mdi mdi-logout mr-2 text-primary"></i> Signout </a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid page-body-wrapper">
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <span class="menu-title">Dashboard</span>
              <i class="mdi mdi-home menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/Users">
              <span class="menu-title">Users</span>
              <i class="mdi mdi-contacts menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/categories">
              <span class="menu-title">Category</span>
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/products">
              <span class="menu-title">Products</span>
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/orders">
              <span class="menu-title">Orders</span>
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/offers">
              <span class="menu-title">Offers</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/reports">
              <span class="menu-title">Reports</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/coupons">
              <span class="menu-title">Coupons</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="banners.html">
              <span class="menu-title">Banners</span>
              <i class="mdi mdi-table-large menu-icon"></i>
            </a>
          </li>
        </ul>
      </nav>

   
      <div class="main-panel">
        <div class="content-wrapper">
           
            <div>
                <h2>Order ID: <%= order._id %></h2>
                <p>Status: <%= order.Status %></p>
                <p>Amount: ₹<%= order.Total_amount %></p>
                <p>Products:</p>
                <ul>
                  <% order.Products.forEach(productDetail => { %>
                    <li><%= productDetail.Product.Product_name %>  -  ₹<%= productDetail.Product.Price %>
                        status : <button><%= productDetail.Status %></button>
                      <form action="/admin/orders/<%= order._id %>/products/<%= productDetail.Product._id %>/status" method="POST">
                        <select name="status" onchange="this.form.submit()">
                          <option value="Pending" <%= productDetail.Status === 'Pending' ? 'selected' : '' %>>Pending</option>
                          <option value="Delivered" <%= productDetail.Status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                          <option value="Cancelled" <%= productDetail.Status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                          <option value="Processing" <%= productDetail.Status === 'Processing' ? 'selected' : '' %>>Processing</option>
                        </select>
                      </form></li>
                  <% }); %>
                </ul>
                
                <p>Address:</p>
                <p><%= order.Address.Street %>, <%= order.Address.City %>,Pin: <%= order.Address.Pincode %>, <%= order.Address.State %></p>
            </div>
            

        </div>
      </div>
    </div>
   

    <script src="/admin-assets/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="/admin-assets/js/off-canvas.js"></script>
    <script src="/admin-assets/js/hoverable-collapse.js"></script>
    <script src="/admin-assets/js/misc.js"></script>
    <script src="/admin-assets/js/dashboard.js"></script>
    <script src="/admin-assets/js/todolist.js"></script>

</body>

</html>