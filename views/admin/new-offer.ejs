      <div class="main-panel">
        <div class="content-wrapper">

          <h1>Add New Offer</h1><br>
          <form action="/admin/offers" method="post" >

            <label for="type" class="form-label">type:</label>
        <select id="type" name="type" required onchange="showHideFields(this.value)">
            <option value="product">product</option>
            <option value="category">category</option>
            <!-- <option value="referral">referral</option> -->
        </select><br><br>

        <div id="productFields" style="display: none;">
          <label for="product" class="form-label">product:</label>
          <select id="product" name="product_name" required>
              <% products.forEach(product => { %>
                 <option value="<%= product.Product_name %>"><%= product.Product_name %></option>
              <% }); %>
          </select>
        </div>

        <div id="categoryFields" style="display: none;">
          <label for="category" class="form-label">Category:</label>
          <select id="category" name="Category_name" required>
              <% categories.forEach(category => { %>
                 <option value="<%= category.name %>"><%= category.name %></option>
              <% }); %>
          </select>
        </div>

        <br><br>

             
              <label for="productDiscount" class="form-label">Discount:</label>
              <input type="number" id="productDiscount" name="Discount" class="form-control" required><br><br>    

             
               <label for="validFrom" class="form-label">Valid From:</label>
               <input type="date" id="validFrom" name="validFrom" class="form-control" required><br><br>

               <label for="validTo" class="form-label">Valid To:</label>
               <input type="date" id="validTo" name="validTo" class="form-control" required><br><br>
               
              <button type="submit">Add Offer</button>
          </form>
      
          
        
          

        </div>
